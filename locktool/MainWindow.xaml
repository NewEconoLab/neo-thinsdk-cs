                <TextBox x:Name="txt_get_srcaddr" HorizontalAlignment="Left" Height="23" Margin="114,38,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="373" IsReadOnly="True"/>
